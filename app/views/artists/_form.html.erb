<%= form_with model: @artist, class: "w-50" do |form| %>
  <div class="form-group mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Artist name...", required: true, class: "form-control" %>
  </div>
  <%= form.submit "Add", remote: true, class: "btn btn-primary" %>
<% end %>